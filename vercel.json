{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "npm install" },
    { "src": "dist/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "dist/server.js" },
    { "src": "/public/(.*)", "dest": "/public/$1" },
    { "src": "/favicon.ico", "dest": "/favicon.ico" }
  ]
}
