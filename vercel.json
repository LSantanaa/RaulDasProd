{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/tasks/updateMedia", "dest": "src/tasks/updateUserMedia.ts" },
    { "src": "/tasks/updateToken", "dest": "src/tasks/updateUserToken.ts" },
    { "src": "/(.*)", "dest": "src/server.ts" }
  ],
  "crons": [
    {
      "path": "/api/cron/",
      "schedule": "0 5 * * *"
    }
  ]
}
